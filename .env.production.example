# CIA System - Production Environment Variables
# Copy this file to .env.production and fill in your values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
POSTGRES_DB=cia_db
POSTGRES_USER=cia_user
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
# Redis is configured in docker-compose.yml
# No additional configuration needed

# ============================================================================
# BACKEND API CONFIGURATION
# ============================================================================
NODE_ENV=production
PORT=5000

# Database Connection
DATABASE_URL=postgresql://cia_user:CHANGE_THIS_STRONG_PASSWORD@postgres:5432/cia_db

# Redis Connection
REDIS_URL=redis://redis:6379

# ============================================================================
# MOBILE OPTIMIZATION
# ============================================================================
ENABLE_MOBILE_OPTIMIZATION=true
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=9
MOBILE_PAGE_SIZE=20
MOBILE_MAX_PAYLOAD_SIZE=1mb
ENABLE_WEBSOCKET_COMPRESSION=true

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100
API_TIMEOUT=30000

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# For production, set to your frontend domain
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# ============================================================================
# SECURITY
# ============================================================================
# Generate strong secrets: openssl rand -base64 32
SESSION_SECRET=CHANGE_THIS_TO_RANDOM_STRING
JWT_SECRET=CHANGE_THIS_TO_RANDOM_STRING
JWT_EXPIRATION=7d

# ============================================================================
# AI INTEGRATION (REQUIRED)
# ============================================================================
# Get your API key from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# ============================================================================
# EXTERNAL INTEGRATIONS (OPTIONAL)
# ============================================================================

# Slack Integration
# Get from: https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-token-here
SLACK_SIGNING_SECRET=your-signing-secret

# Accelo CRM
# Get from: https://app.accelo.com/oauth2/v0/authorize
ACCELO_CLIENT_ID=your-client-id
ACCELO_CLIENT_SECRET=your-client-secret
ACCELO_DEPLOYMENT=your-deployment-name

# Google Analytics & OAuth
# Get from: https://console.cloud.google.com
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# Fireflies.ai
# Get from: https://fireflies.ai/integrations
FIREFLIES_API_KEY=your-api-key

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================
# Update these based on your deployment domain
REACT_APP_API_URL=http://localhost:5000
REACT_APP_WS_URL=ws://localhost:5000
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_OFFLINE=true

# ============================================================================
# SSL/TLS CONFIGURATION (Optional)
# ============================================================================
# If using custom SSL certificates
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# ============================================================================
# MONITORING & LOGGING (Optional)
# ============================================================================
# LOG_LEVEL=info
# SENTRY_DSN=your-sentry-dsn
# DATADOG_API_KEY=your-datadog-key

# ============================================================================
# BACKUP CONFIGURATION (Optional)
# ============================================================================
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=0 2 * * *
# BACKUP_RETENTION_DAYS=30
# S3_BACKUP_BUCKET=your-backup-bucket
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
